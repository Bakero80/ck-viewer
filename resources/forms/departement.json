{
	"name": "departement.default",
	"description": "Fiche de description des Départements...",
	"window": {
		"title": "DEPARTEMENTS"
	},
	"dataUrl": "/packages/local/ck-viewer/resources/data/departement/{0}.json",
	"form": {
		"items": [{
			"fieldLabel": "ID Geofla",
			"name": "ID_GEOFLA",
			"prefix": "n° ",
			"suffix": " (validé)",
		  "allowBlank" : false
		},{
			"xtype": "combo",
			"name": "NOM_REGION",
		  "fieldLabel": "Nom région",
			"suffix": " (test)",

			"_store": [
				"un",
				"deux",
				"trois"
			],
		  	"__store": "/packages/local/ck-viewer/resources/data/regions.json",

		  	"store": {
			  "url": "/packages/local/ck-viewer/resources/data/regions.json",
			  "sorters": [{
				"property": "NOM"
			  }],
			  "filters": [{
				"property": "hidden",
				"value": false
			  }]
			},

		  	"reference": "region",
		  	"publishes": "value",

			"displayField": "NOM",
			"valueField": "NOM"
		},{
		  "xtype": "combo",
		  "fieldLabel": "Nom",
		  "name": "NOM_DEPT",
		  "store": "/packages/local/ck-viewer/resources/data/departements.json",
		  "displayField": "NOM_DEPT",
		  "valueField": "NOM_DEPT",
		  "__itemTpl": "{NOM_DEPT} ({CODE_DEPT})",
		  "forceSelection": true,
		  "bind": {
			"filters": {
			  "property": "NOM_REGION",
			  "value": "{region.value}"
			}
		  }
		}]
	}
}